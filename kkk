  <script>
    // ‡∏Ñ‡∏≥‡πÅ‡∏õ‡∏•‡∏™‡∏≠‡∏á‡∏†‡∏≤‡∏©‡∏≤
    const i18n = {
      th: { title:"‡∏¢‡∏¥‡∏ô‡∏î‡∏µ‡∏ï‡πâ‡∏≠‡∏ô‡∏£‡∏±‡∏ö", subtitle:"‡πÄ‡∏•‡∏∑‡∏≠‡∏Å‡∏†‡∏≤‡∏©‡∏≤‡∏ó‡∏µ‡πà‡∏Ñ‡∏∏‡∏ì‡∏ï‡πâ‡∏≠‡∏á‡∏Å‡∏≤‡∏£‡πÉ‡∏ä‡πâ‡πÉ‡∏ô‡∏´‡∏ô‡πâ‡∏≤‡πÄ‡∏ß‡πá‡∏ö‡∏ô‡∏µ‡πâ", next:"‡∏ñ‡∏±‡∏î‡πÑ‡∏õ" },
      en: { title:"Welcome", subtitle:"Choose the language you'd like to use on this page", next:"Next" }
    };

    // ‡∏ü‡∏±‡∏á‡∏Å‡πå‡∏ä‡∏±‡∏ô‡πÄ‡∏õ‡∏•‡∏µ‡πà‡∏¢‡∏ô‡∏†‡∏≤‡∏©‡∏≤
    function setLanguage(lang){
      document.querySelectorAll('.lang-btn').forEach(btn=>{
        const active = btn.dataset.lang === lang;
        btn.classList.toggle('active', active);
      });
      document.querySelectorAll('[data-i18n]').forEach(el=>{
        const key = el.getAttribute('data-i18n');
        if(i18n[lang][key]) el.textContent = i18n[lang][key];
      });
      document.documentElement.lang = lang;
      localStorage.setItem('preferredLang', lang);
    }

    // ‡πÇ‡∏´‡∏•‡∏î‡∏†‡∏≤‡∏©‡∏≤‡∏ó‡∏µ‡πà‡πÄ‡∏Ñ‡∏¢‡πÄ‡∏•‡∏∑‡∏≠‡∏Å‡πÑ‡∏ß‡πâ ‡∏´‡∏£‡∏∑‡∏≠‡πÄ‡∏£‡∏¥‡πà‡∏°‡∏ï‡πâ‡∏ô‡πÄ‡∏õ‡πá‡∏ô‡πÑ‡∏ó‡∏¢
    const defaultLang = localStorage.getItem('preferredLang') || 'th';
    setLanguage(defaultLang);

    // ‡∏õ‡∏∏‡πà‡∏°‡πÄ‡∏•‡∏∑‡∏≠‡∏Å‡∏†‡∏≤‡∏©‡∏≤
    document.getElementById('th-btn').onclick = ()=> setLanguage('th');
    document.getElementById('en-btn').onclick = ()=> setLanguage('en');

    // üîπ ‡∏õ‡∏∏‡πà‡∏°‡∏¢‡πâ‡∏≠‡∏ô‡∏Å‡∏•‡∏±‡∏ö‡πÑ‡∏õ‡∏¢‡∏±‡∏á firt.html
    document.getElementById('back').onclick = ()=>{
      window.location.href = 'firt.html';
    };

    // üîπ ‡∏õ‡∏∏‡πà‡∏°‡∏ñ‡∏±‡∏î‡πÑ‡∏õ
    document.getElementById('next-btn').onclick = ()=>{
      const lang = document.documentElement.lang;
      if(lang === 'th'){
        window.location.href = 'threeTH.html';
      } else if(lang === 'en'){
        window.location.href = 'threeEN.html';
      } else {
        alert('‡∏Å‡∏£‡∏∏‡∏ì‡∏≤‡πÄ‡∏•‡∏∑‡∏≠‡∏Å‡∏†‡∏≤‡∏©‡∏≤');
      }
    };
  </script>
</body>
</html>

